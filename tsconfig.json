{
  "compilerOptions": {
    "rootDir": "scripts",
    "outDir": "bin",
    "incremental": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true
  },
  "include": [
    "scripts/**/*"
  ]
}
