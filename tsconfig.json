{
  "compilerOptions": {
    "rootDir": "scripts",
    "outDir": "bin",
    "incremental": true,
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true
  },
  "include": [
    "scripts/**/*"
  ]
}
